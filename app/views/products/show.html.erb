<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>

   <% if current_user %>
    <div class="row">
        <div class="col-sm-6 col-sm-offset-1">
            <%= form_for [@product, @new_review]  do |form| %>
                <% if form.object.errors.any? %>
                    <div class="alert alert-danger">
                        <strong>The following errors prevented saving:</strong>
                        <ul>
                            <% form.object.errors.full_messages.each do |error| %>
                            <li><%= error %></li>
                            <% end %>
                        </ul>
                    </div>
                <% end %>
            <div class="form-group">
                <%= form.label :description %>
                <%= form.text_field :description, class: 'form-control' %>
            </div>
            <div class="form-group">
                <%= form.label :rating %>
                <%= form.select :rating, [[1], [2], [3], [4], [5]]%>
            </div>
            <%= form.submit 'Submit', class: 'btn btn-primary' %>
            <% end %>
        </div>
    </div>
    <% end %>

      <div class="dl-vertical reviews-container">
          <% @reviews.each do |review| %>
              <div class="row product-review">
                  <dl class="dl-horizontal">
                    <div class="col-sm-12">
                        <% @user = User.find(review.user_id) %>
                        <dt> Name </dt>
                        <dd> <%= "#{@user.first_name} #{@user.last_name}" %> </dd>
                        <dt> Review </dt>
                        <dd> <%= review.description %> </dd>
                        <dt> Rating </i></dt>
                        <dd> <% for i in 1..review.rating %>
                            <i class="fa fa-star" aria-hidden="true"></i>
                            <% end %>
                        </dd>
                        <% if current_user && current_user.id == @user.id %>
                            <dt>
                                <%= link_to "Remove", [@product, review], method:
                                :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-danger" %>
                            </dt>
                        <% end %>
                    </div>
                  </dl>
              </div>
          <% end %>
      </div>


  </article>

</section>
